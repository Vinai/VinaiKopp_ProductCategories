<?php /** @var $this VinaiKopp_ProductCategories_Block_CategoryList */ ?>
<?php $_sep = $this->getSeparator() ?>
<div id="parent-categories" class="product-collateral">
    <?php $_categories = $this->getCategories() ?>
    <?php if ($_categories): ?>
    <div class="title">
        <strong><?php echo $this->__('This product can be found within the following categories:') ?></strong>
    </div>
    <ul class="parent-categories">
        <?php foreach ($_categories as $_category): ?>
            <li class="<?php echo $this->getListCssClasses($_category) ?>">
            <?php foreach ($this->getParentCategoriesForCategory($_category) as $_parent): ?>
                <span class="<?php echo $this->getCatCssClasses($_parent) ?>">
                    <a href="<?php echo $_parent->getUrl() ?>"><?php echo $this->escapeHtml($_parent->getName()) ?></a>
                </span> <?php if (! $_parent->getIsHead()) echo $_sep ?>
            <?php endforeach ?>
            </li>
        <?php endforeach ?>
    </ul>
    <?php endif; ?>
</div>
